<scene version="3.0.0">

    <!-- Defaults, these can be set via the command line: -Darg=value -->

    <default name="spp" value="300"/>
    <default name="resx" value="1920"/>
    <default name="resy" value="1080"/>
    <default name="max_depth" value="8"/>


